<?xml version="1.0"?>
<robot name="planar3">
  <!-- Base link fixed at world -->
  <link name="base"/>

  <joint name="base_to_link1" type="fixed">
    <parent link="base"/>
    <child  link="link1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Link 1 -->
  <link name="link1">
    <inertial>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry><box size="1.0 0.05 0.05"/></geometry>
      <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>
    </visual>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="link1"/>
    <child  link="link2"/>
    <origin xyz="1.0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="10" velocity="10"/>
  </joint>

  <!-- Link 2 -->
  <link name="link2">
    <inertial>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry><box size="1.0 0.05 0.05"/></geometry>
      <material name="lightgray"><color rgba="0.8 0.8 0.8 1"/></material>
    </visual>
  </link>

  <joint name="joint2" type="revolute">
    <parent link="link2"/>
    <child  link="link3"/>
    <origin xyz="1.0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="10" velocity="10"/>
  </joint>

  <!-- Link 3 (end effector link) -->
  <link name="link3">
    <inertial>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry><box size="1.0 0.05 0.05"/></geometry>
      <material name="silver"><color rgba="0.9 0.9 0.9 1"/></material>
    </visual>
  </link>

  <!-- A dummy end-effector frame at the tip of link3 -->
  <joint name="joint3" type="revolute">
    <parent link="link3"/>
    <child  link="ee"/>
    <origin xyz="1.0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="10" velocity="10"/>
  </joint>

  <link name="ee"/>
</robot>
